*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 14px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 600px)
    font-size 12px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em
  a
    color #333

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  position relative

  &:after
  &:before
    content: " "
    display: table

  @media screen and (max-width: 820px)
    width 100%

#main-col
  width 100%

#content
  margin-top 20px